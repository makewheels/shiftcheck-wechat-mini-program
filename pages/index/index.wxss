/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container {
  padding-top: 100rpx;
}

.title {
  font-size: 70rpx;
  margin-bottom: 20rpx;
}

span {
  color: blue;
  font-size: 50rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

button {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background-color: #426ab3;
}

.hover {
  color: #ccc;
  background-color: #191970;
}

.flex-wrap {
  display: -webkit-flex;
}

text {
  line-height: 100rpx;
}

#description {
  margin-top: 50rpx;
}
